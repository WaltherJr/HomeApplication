<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeAutomation2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomSlider" parent="Widget.MaterialComponents.Slider">
        <item name="trackColor">@color/slider_track_color</item>
        <item name="trackColorActive">@color/slider_track_active</item>
        <item name="trackColorInactive">@color/slider_track_inactive</item>
        <item name="thumbColor">@color/slider_thumb</item>
        <item name="tickColor">@color/slider_tick_color</item>
        <item name="tickColorActive">@color/slider_tick_active</item>
        <item name="tickColorInactive">@color/slider_tick_inactive</item>
    </style>
</resources>